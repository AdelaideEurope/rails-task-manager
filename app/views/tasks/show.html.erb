<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

<% if @task.completed %>
    ✅ This task is completed
  <% else %>
    ❌ This task is not completed yet
  <% end %>

<p><%= link_to "Back to list", tasks_path %></p>

<p><%= link_to "Edit", edit_task_path %></p>

<p><%= link_to "Delete", task_path,
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
